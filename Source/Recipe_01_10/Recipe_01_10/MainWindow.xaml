<Window x:Class="Recipe_01_10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="300" Width="300"
        Background="{DynamicResource ResourceKey=WindowBackgroundBrush}">
    
    <Window.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="ButtonBackground" Color="Yellow" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ExternalResourceDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Button Height="20"
            Width="20"
            Background="{DynamicResource ResourceKey=ButtonBackground}"/>
</Window>
